{
  "name": "Job‑Tracker (Notion Only)",
  "description": "Automatically logs job applications directly to Notion database",
  "version": "10.0",
  "manifest_version": 3,

 
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],


  "host_permissions": [
    "*://*/*"
  ],


  "action": {
    "default_title": "Job‑Tracker"
  },

  
  "background": {
    "service_worker": "background.js"
  },

  
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}