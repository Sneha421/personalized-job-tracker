{
    "name": "Job‑Tracker",
    "description": "Automatically logs job applications to Notion",
    "version": "1.3",
    "manifest_version": 3,
  
    "permissions": [
      "scripting",
      "storage",
      "tabs",
      "activeTab"
    ],
  
    "host_permissions": [
      "*://*/*"          
    ],
  
    "action": {
      "default_title": "Job‑Tracker"
    },
  
    "background": {
      "service_worker": "background.js"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }